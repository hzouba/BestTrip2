                    </div>
                    <div class="bg-holder full">
                        <div class="bg-mask"></div>
                        <div class="bg-img" style="background-image:url({{asset('bundles/btfront/img/2048x1365.png') }});"></div>
                    </div>
                </div>
                <div class="bg-img hidden-lg" style="background-image:url({{asset('bundles/btfront/img/2048x1365.png') }});"></div>
                <div class="bg-mask hidden-lg"></div>
            </div>
        </div>
        <!-- END TOP AREA  -->
    
{% endblock bt_slider %}