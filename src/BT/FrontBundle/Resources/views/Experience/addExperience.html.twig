{% extends "BTFrontBundle::layout.html.twig" %}

{% block bt_container %}
    
    <div class="container">
        <h1 class="page-title">Add Experience</h1>
            <div class="row">
                <div class="col-md-7">
                    <form class="mt30" method="post">
                                <div class="form-group">
                                    <label>Name</label>
                                    {{form_widget(form.name)}}
                                </div>
                            
                                <div class="form-group">
                                    <label>Date</label>
                                    {{form_widget(form.dateAdd)}}
                                </div>
                            
                        {{form_widget(form._token)}}
                        <input class="btn btn-primary" type="submit" value="Add Experience" />
                    </form>
                </div>
                <div class="col-md-4">
                    
                </div>
            </div>
            <div class="gap"></div>
        </div>
    
{% endblock bt_container %}
