{% extends "BTFrontBundle::layout.html.twig" %}

{% block bt_container %}
    
    <div class="container">
        <h1 class="page-title">Add Experience</h1>
            <div class="row">
                <div class="col-md-7">
                    <form class="mt30" method="post" {{form_enctype(form)}}>
                                <div class="form-group">
                                    <label>Description</label>
                                    {{form_widget(form.description)}}
                                </div>
                                <div class="form-group">
                                    <label>Cost</label>
                                    {{form_widget(form.cost)}}
                                </div>
                            
                                <div class="form-group">
                                    <label>Picture</label>
                                    {{form_widget(form.picture)}}
                                </div>
                            
                                <div class="form-group">
                                    <label>Video</label>
                                    {{form_widget(form.video)}}
                                </div>
                            
                                <div class="form-group">
                                    <label>Type</label>
                                    {{form_widget(form.idObjectType)}}
                                </div>
                            
                                <div class="form-group">
                                    <label>Experience</label>
                                    {{form_widget(form.idExperience)}}
                                </div>
                            
                        {{form_widget(form._token)}}
                        <input class="btn btn-primary" type="submit" value="Add Experience Details" />
                    </form>
                </div>
                <div class="col-md-4">
                    
                </div>
            </div>
            <div class="gap"></div>
        </div>
    
{% endblock bt_container %}
