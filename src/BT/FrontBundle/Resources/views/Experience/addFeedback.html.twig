{% extends "BTFrontBundle::layout.html.twig" %}

{% block bt_container %}
    
    <div class="container">
        <h1 class="page-title">Add Feedback</h1>
            <div class="row">
                <div class="col-md-7">
                    <form class="mt30" method="post">
                                <div class="form-group">
                                    <label>Comment</label>
                                    {{form_widget(form.comment)}}
                                </div>
                                <div class="form-group">
                                    <label>Raiting</label>
                                    {{form_widget(form.raiting)}}
                                </div>
                          
                                <div class="form-group">
                                    <label>Experience</label>
                                    {{form_widget(form.idExperience)}}
                                </div>
                            
                        {{form_widget(form._token)}}
                        <input class="btn btn-primary" type="submit" value="Add Experience Feedback" />
                    </form>
                </div>
                <div class="col-md-4">
                    
                </div>
            </div>
            <div class="gap"></div>
        </div>
    
{% endblock bt_container %}
